                li.innerHTML = '<span class="status-indicator">' + statusIcon + '</span>' +
                    'Workcenter: ' + production.workcenter + ' | PO: ' + production.productionOrder +
                    ' | Product: ' + production.productID + ' | Shift: ' + production.shift.name +
